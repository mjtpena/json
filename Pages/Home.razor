@page "/"
@inject NavigationManager Navigation

<PageTitle>JSON Editor - Ultimate JSON Tool</PageTitle>

<MudContainer MaxWidth="MaxWidth.Large" Class="my-8">
    <div class="text-center mb-8">
        <h1 class="display-4 mb-4">Ultimate JSON Tool</h1>
        <p class="lead">The most powerful JSON toolkit for developers</p>
        
        <div class="mt-6">
            <MudButton StartIcon="@Icons.Material.Filled.Edit"
                      Variant="Variant.Filled"
                      Color="Color.Primary"
                      Size="Size.Large"
                      OnClick="@(() => Navigation.NavigateTo("/formatter"))"
                      Class="ma-2">
                Start Editing
            </MudButton>
            <MudButton StartIcon="@Icons.Material.Filled.Tune"
                      Variant="Variant.Outlined"
                      Size="Size.Large"
                      OnClick="@(() => Navigation.NavigateTo("/formatter"))"
                      Class="ma-2">
                Quick Demo
            </MudButton>
        </div>
    </div>

    <div class="stats-section">
        <MudGrid Justify="Justify.Center" Spacing="4">
            <MudItem xs="12" sm="4" Class="text-center">
                <div class="stat-card">
                    <h3>10+</h3>
                    <p>Tools</p>
                </div>
            </MudItem>
            <MudItem xs="12" sm="4" Class="text-center">
                <div class="stat-card">
                    <h3>âˆž</h3>
                    <p>JSON Size</p>
                </div>
            </MudItem>
            <MudItem xs="12" sm="4" Class="text-center">
                <div class="stat-card">
                    <h3>0ms</h3>
                    <p>Load Time</p>
                </div>
            </MudItem>
        </MudGrid>
    </div>

    <div class="features-grid mt-8">
        <MudGrid Spacing="4">
            <MudItem xs="12" md="6" lg="4">
                <MudCard Class="feature-card h-100">
                    <MudCardContent>
                        <MudIcon Icon="@Icons.Material.Filled.Code" Class="feature-icon" />
                        <h4>Format & Validate</h4>
                        <p>Beautify and validate JSON with real-time feedback</p>
                    </MudCardContent>
                </MudCard>
            </MudItem>
            <MudItem xs="12" md="6" lg="4">
                <MudCard Class="feature-card h-100">
                    <MudCardContent>
                        <MudIcon Icon="@Icons.Material.Filled.Transform" Class="feature-icon" />
                        <h4>Convert & Transform</h4>
                        <p>Transform between JSON, XML, YAML, and more formats</p>
                    </MudCardContent>
                </MudCard>
            </MudItem>
            <MudItem xs="12" md="6" lg="4">
                <MudCard Class="feature-card h-100">
                    <MudCardContent>
                        <MudIcon Icon="@Icons.Material.Filled.Compare" Class="feature-icon" />
                        <h4>Compare & Diff</h4>
                        <p>Visual diff tool to compare JSON structures</p>
                    </MudCardContent>
                </MudCard>
            </MudItem>
        </MudGrid>
    </div>
</MudContainer>

<style>
    .stat-card {
        padding: 1rem;
    }
    .stat-card h3 {
        font-size: 2rem;
        font-weight: bold;
        margin-bottom: 0.5rem;
    }
    .feature-card {
        transition: transform 0.2s;
    }
    .feature-card:hover {
        transform: translateY(-2px);
    }
    .feature-icon {
        font-size: 2rem;
        margin-bottom: 1rem;
    }
    .stats-section {
        margin: 2rem 0;
    }
</style>